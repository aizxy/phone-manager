<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_item_entry"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/iv_phone_infoPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/notification_information_progress_green"
        android:src="@drawable/setting_info_icon_version" />

    <TextView
        android:id="@+id/tv_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_phone_infoPhoto"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_phone_infoPhoto"
        android:text="title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_phone_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_phone_infoPhoto"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_phone_infoPhoto"
        android:text="content"
        android:textSize="12sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/setting_item_entry"
    android:padding="10dp" >
    
    <CheckBox 
        android:id="@+id/cb_app_softshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:button="@drawable/check_correct"/>
    
    <ImageView 
        android:id="@+id/iv_app_icon_softshow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cb_app_softshow"/>
    
    <TextView 
        android:id="@+id/tv_app_lable_softshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="nihao"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_app_icon_softshow"
        android:layout_alignTop="@+id/iv_app_icon_softshow"/>
    
    <TextView 
        android:id="@+id/tv_app_packageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_app_icon_softshow"
        android:layout_toRightOf="@+id/iv_app_icon_softshow"
        android:text="nnnnnn"
        android:maxLength="20"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"/>
    
    <TextView 
        android:id="@+id/tv_app_clear_softshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="kkkkkk"
        android:maxLength="10"
        android:textSize="10sp"
        android:layout_alignTop="@+id/tv_app_lable_softshow"/>

</RelativeLayout>

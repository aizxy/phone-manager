<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/setting_item_entry"
    android:padding="10dp" >
    
    <CheckBox 
        android:id="@+id/cb_app_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:button="@drawable/check_correct"/>
    
    <ImageView 
        android:id="@+id/iv_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"
        android:layout_toRightOf="@+id/cb_app_clear"
        android:layout_marginLeft="10dp"/>
    
    <TextView 
        android:id="@+id/tv_app_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:layout_alignTop="@+id/iv_app_icon"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/iv_app_icon"/>
   
     <TextView 
        android:id="@+id/tv_app_packageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存：12.4M"
        android:layout_alignBottom="@+id/iv_app_icon"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/iv_app_icon"/>
     
     <TextView 
         android:id="@+id/tv_app_system"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignBottom="@+id/iv_app_icon"
         android:textColor="@color/red"
         android:text="系统进程"/>

</RelativeLayout>
